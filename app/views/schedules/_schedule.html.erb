<div class="schedule">
  <p><strong>Exercise:</strong> <%= schedule.exercise.name %></p>
  <p><strong>Repetitions:</strong> <%= schedule.repetitions %> <%= schedule.exercise.is_cardio? ? 'm' : 'reps' %></p>
  <p><strong>Sets:</strong> <%= schedule.sets %></p>
  <%= link_to 'Edit', edit_schedule_path(schedule), class: "btn btn-secondary" %>
  <%= link_to 'Delete', schedule, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
</div>
